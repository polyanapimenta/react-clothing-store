{
  "name": "react-clothing-store-server",
  "version": "1.0.0",
  "description": "Store Application Server",
  "main": "index.js",
  "engines": {
    "node": "v15.12.0",
    "npm": "7.6.3"
  },
  "scripts": {
    "client": "cd client && npm start",
    "server": "nodemon server.js",
    "build": "cd client && npm run build",
    "dev": "concurrently --kill-others-on-fail \"nodemon server.js\" \"npm run client\"",
    "start": "node server.js",
    "heroku-postbuild": "cd client && npm install && npm install --only=dev --no-shrinkwrap && npm run build",
    "test": "echo \"Error: no test specified\" && exit 1"
  },
  "repository": {
    "type": "git",
    "url": "git+ssh://git@github.com/polyanapimenta/react-clothing-store.git"
  },
  "author": "Polyana Pimenta",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/polyanapimenta/react-clothing-store/issues"
  },
  "homepage": "https://github.com/polyanapimenta/react-clothing-store#readme",
  "dependencies": {
    "body-parser": "^1.19.0",
    "dotenv": "^8.2.0",
    "express": "^4.17.1",
    "stripe": "^8.142.0"
  },
  "devDependencies": {
    "concurrently": "^6.0.1",
    "nodemon": "^2.0.7"
  }
}
